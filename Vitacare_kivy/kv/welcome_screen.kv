<WelcomeScreen>:
    name: 'welcome'
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20

        # Centered Image
        Image:
            source: 'assets/vitacare_logo.png'  # Use correct path to the image
            size_hint: (None, None)
            size: (200, 200)  # Adjust size as needed
            pos_hint: {"center_x": 0.5}

        # Centered Welcome Text
        Label:
            text: 'Welcome to VitaCare'
            font_size: 24
            color: 0, 0, 0, 1
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]

        # Spacer to push buttons lower
        Widget:
            size_hint_y: None
            height: 30

        # Buttons area
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            spacing: 20
            padding: [100, 0, 100, 0]

            Button:
                text: 'Patient'
                size_hint_y: None
                height: 50
                on_press: root.manager.current = 'patient_login'

            Button:
                text: 'Doctor'
                size_hint_y: None
                height: 50
                on_press: root.manager.current = 'doctor_login'