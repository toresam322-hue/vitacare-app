<ForgotPasswordEmailScreen>:
    name: "forgot_password_email"
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "Enter your email to reset password"

        TextInput:
            id: email_input
            hint_text: "Email"
            multiline: False
            size_hint_y: None
            height: 50

        Button:
            text: "Send Code"
            size_hint_y: None
            height: 50
            on_release:
                root.send_reset_code(email_input.text)

        Button:
            text: "Back to Login"
            size_hint_y: None
            height: 50
            on_release:
                root.manager.current = "patient_login"