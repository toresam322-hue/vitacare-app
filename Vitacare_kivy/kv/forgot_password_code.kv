<ForgotPasswordCodeScreen>:
    name: "forgot_password_code"
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20

        Label:
            text: "Enter the 5-digit code sent to your email"
            font_size: 20
            size_hint_y: None
            height: self.texture_size[1]

        TextInput:
            id: code_input
            hint_text: "Enter Code"
            input_filter: 'int'
            multiline: False
            size_hint_y: None
            height: 50
            max_text_length: 5

        MDRaisedButton:
            text: "Verify Code"
            size_hint_y: None
            height: 50
            on_release:
                root.verify_code()

        Button:
            text: "Back"
            size_hint_y: None
            height: 50
            on_release:
                root.manager.current = "forgot_password_email"