<ResetPasswordScreen>:
    name: "reset_password"
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "Reset Your Password"

        TextInput:
            id: new_password
            hint_text: "New Password"
            password: True
            multiline: False
            size_hint_y: None
            height: 50

        TextInput:
            id: confirm_password
            hint_text: "Confirm Password"
            password: True
            multiline: False
            size_hint_y: None
            height: 50

        Button:
            text: "Save"
            size_hint_y: None
            height: 50
            on_release:
                root.reset_password()

        Button:
            text: "Back"
            size_hint_y: None
            height: 50
            on_release:
                root.manager.current = "forgot_password_code"